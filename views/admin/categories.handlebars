<h2>Categorias:</h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-block btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <div class="row">
            <div class="col-md-10">
                <h4>{{nome}}</h4>
            <h6><strong>Slug: </strong>{{slug}}</h6><hr>
            <small>{{date}}</small>
            </div>
            <div class="col-md-2">
                <a href="/admin/categories/edit/{{_id}}"><input type="submit" class="btn btn-success mt-2 btn-block" value="Editar"></a>
                <form action="/admin/categories/delete" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <input type="submit" class="btn btn-danger mt-2 btn-block" value="Deletar">
            </form>
            </div>
            </div>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada :(</h4>
{{/each}}