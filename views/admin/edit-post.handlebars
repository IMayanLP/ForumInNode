{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h3>Editar post</h3>
        <form action="/admin/posts/edit" method="post">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}" required>
            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}" required>
            <label for="desc">Descrição</label>
            <input type="text" name="desc" class="form-control" value="{{postagem.descricao}}" required>
            <label for="conteudo">Conteudo:</label>
            <textarea name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>

            <label for="categoria">Categoria</label>
            <select name="categoria" class="custom-select">
                {{#each categoria}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            
            <input type="submit" class="btn btn-success btn-block mt-3" value="Salvar post">
        </form>
    </div>
</div>